#!/usr/bin/env node

var config = require('../lib/config'),
    path = require('path'),
    exec = require('child_process').exec;

if (!path.existsSync(config.file.database.location)){
    var cpCommand = 'cp ' + __dirname + '/../samples/nodo.db_sample ' + config.file.database.location;
    exec(cpCommand, function(err, stdout, stderr){
        if (err){
            console.log(err.toString());
        }
    });
}
else{
    console.log('Database file already exists. Remove it first if you really wish to create a new one.');
}
